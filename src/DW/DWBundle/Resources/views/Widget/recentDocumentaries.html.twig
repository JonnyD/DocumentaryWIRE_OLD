<div class="widget widget-posts">
    <div class="widget-header">
        <h3 class="widget-title">Recently Added</h3>
    </div>
    <ul class="post-list">
        {% for documentaryKey in getDocumentariesBySection('recent')|slice(0,6) %}
            {% set slug = documentaryKey.slug %}
            {% set documentary = fetchDocumentary(slug) %}
        <li class="item cf item-video">

            <div class="thumb">
                <a class="clip-link" data-id="1" title="Hello world!" href="http://localhost/documentarywire_wordpress/hello-world/">
			<span class="clip">
				<img src="{{ asset(documentary.thumbnail) }}"
                     alt="Hello world!" />
                <span class="vertical-align"></span>
			</span>

                    <span class="overlay"></span>
                </a>
            </div>
            <div class="data">
                <h4 class="entry-title">
                    <a href="http://localhost/documentarywire_wordpress/hello-world/"
                       title="Hello world!">{{ documentary.title }}</a>
                </h4>

                <p class="stats"><span class="views"><i class="count">7</i> <span class="suffix">Views</span></span><span class="comments"><i class="count">2</i> <span class="suffix">Comments</span></span><span class="dp-post-likes likes"><i class="count" data-pid="1">0</i> <span class="suffix">Likes</span></span></p>
            </div>
        </li>
        {% endfor %}
    </ul>
</div>