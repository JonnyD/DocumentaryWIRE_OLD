{% set routeParams = app.request.attributes.get('_route_params') %}
{% set routeParams = routeParams|merge(app.request.query.all) %}
{% set currentRoute = app.request.attributes.get('_route') %}

<div id="sticky-navigationd">
    <div id="main-nav">
        <div class="wrap cf">

            <ul class="menu">
                <li id="menu-item-522" class="menu-item menu-item-type-post_type menu-item-object-page
                    {% if currentRoute == 'documentary_wire_homepage' %}current-menu-item current-page_item{% endif %}">
                    <a href="{{ url('documentary_wire_homepage') }}">Home</a>
                </li>
                <li id="menu-item-549" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-549
                {% if currentRoute == 'documentary_wire_browse' %}current-menu-item current-page_item{% endif %}">
                    <a href="{{ url('documentary_wire_browse') }}">Browse Documentaries</a>
                </li>
                <li id="menu-item-6" class="menu-item menu-item-type-taxonomy menu-item-object-category menu-item-6
                {% if currentRoute == 'documentary_wire.list' %}current-menu-item current-page_item{% endif %}">
                    <a href="{{ url('documentary_wire.list') }}">Documentary List</a>
                </li>
                <li id="menu-item-11" class="menu-item menu-item-type-taxonomy menu-item-object-category menu-item-11
                {% if currentRoute == 'documentary_wire.show_community' %}current-menu-item current-page_item{% endif %}">
                    <a href="{{ url('documentary_wire.show_community') }}">Community</a></li>
                <li id="menu-item-530" class="menu-item menu-item-type-taxonomy menu-item-object-category menu-item-530
                {% if currentRoute == 'documentary_wire.contact' %}current-menu-item current-page_item{% endif %}">
                    <a href="{{ url('documentary_wire.contact') }}">Contact</a></li>
            </ul>

            <div id="navigation-right">

                {% if app.user is not null %}

                <div id="account-nav" class="user-nav">
                    <a class="dropdown-handle"
                       href="{{ url('documentary_wire_show_user', {'username': app.user.username }) }}">
                        <img alt='' src='{{ asset(getAvatar(app.user, 'avatar50')) }}' class='avatar avatar-32 photo' height='32' width='32' />
                        <span class="display-name btn"><span class="arrow-down">{{ app.user.displayName }}</span></span>
                    </a>

                    <div class="dropdown-content">
                        <ul class="dropdown-content-inner">
                            <li><a class="profile-link"
                                   href="{{ url('documentary_wire_show_user', {'username': app.user.username }) }}">Profile</a></li>
                            <li><a href="{{ url('documentary_wire.edit_profile') }}">Edit Profile</a></li>
                            <li><a href="{{ url('documentary_wire_show_user_favourites', {'username': app.user.username }) }}">Favorites</a></li>
                            <li><a class="logout-link" href="{{ url('logout') }}">Log out</a></li>
                        </ul>
                    </div>
                </div><!-- end #account-nav -->
                {% else %}
                <div id="login-nav">
                    <!--<a class="btn btn-fb" href="{{ url('documentary_wire.register') }}">
                        <span style="float: left; vertical-align: middle; margin-right: 5px;">
                            <img width="15" height="15" src="{{ asset('css/images/fb-icon.svg') }}" /></span>
                            Connect with Facebook</a>-->

                    <a class="btn btn-green register-link" href="{{ url('documentary_wire.register') }}">Sign up</a>

                    <div class="dropdown">
                        <a class="dropdown-handle btn btn-black login-link" href="{{ url('login') }}">Log In</a>

                        <div class="dropdown-content">
                            <div class="dropdown-content-inner">

                                <form name="loginform" id="loginform" action="{{ url('login_check') }}" method="post">
                                    <p class="login-username">
                                        <label for="user_login">Username</label>
                                        <input type="text" name="_username" id="username" class="input" value="" size="20" />
                                    </p>
                                    <p class="login-password">
                                        <label for="user_pass">Password</label>
                                        <input type="password" name="_password" id="password" class="input" value="" size="20" />
                                    </p>
                                    <a class="lost-password" href="{{ url('documentary_wire.forgot_password') }}">Forgot password?</a>
                                    <p class="login-remember"><label><input name="rememberme" type="checkbox" id="rememberme" value="forever" /> Remember Me</label></p>
                                    <p class="login-submit">
                                        <input type="submit" name="wp-submit" id="wp-submit" class="button-primary" value="Log In" />
                                    </p>

                                </form>
                            </div>

                            <a href="{{ url('hwi_oauth_connect_facebook') }}"><div class="facebook_sign_in facebook_sign_in_button"></div></a>
                        </div>
                    </div>

                </div><!-- end #login-nav -->
                {% endif %}
            </div>
        </div>
    </div><!-- end #main-nav -->
</div>