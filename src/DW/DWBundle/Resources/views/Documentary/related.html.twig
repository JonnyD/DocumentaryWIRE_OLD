<div id="dp-widget-posts-2" class="widget widget-posts">
    <ul class="post-list">
        {% for documentaryKey in relatedDocumentaries(documentary) %}
            {% set slug = documentaryKey.slug %}
            {% set documentary = fetchDocumentary(slug) %}
            <li class="item cf item-video">

                <div class="thumb">
                    <a class="clip-link" data-id="{{ documentary.id }}" title="{{ documentary.title }}"
                       href="{{ path('documentary_wire_show_documentary', {'slug': documentary.slug }) }}">
			<span class="clip">
				<img src="{{ asset(documentary.thumbnail) }}"
                     alt="{{ documentary.title }}" />
                <span class="vertical-align"></span>
			</span>

                        <span class="overlay"></span>
                    </a>
                </div>
                <div class="data">
                    <h4 class="entry-title">
                        <a href="{{ path('documentary_wire_show_documentary', {'slug': documentary.slug }) }}"
                           title="{{ documentary.title }}">{{ documentary.title }}</a>
                    </h4>

                    <p class="stats">
                        <span class="views">
                            <i class="count">{{ documentary.views|views }}</i>
                            <span class="suffix">Views</span>
                        </span>
                        <span class="comments">
                            <i class="count">{{ documentary.commentCount }}</i>
                            <span class="suffix">Comments</span>
                        </span>
                        <span class="dp-post-likes likes">
                            <i class="count" data-pid="1">{{ documentary.likeCount }}</i>
                            <span class="suffix">Likes</span></span></p>
                </div>
            </li>
        {% endfor %}
    </ul>
</div>