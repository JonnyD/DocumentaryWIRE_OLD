{% extends 'DocumentaryWIREBundle::base2.html.twig' %}

{% block body %}
    <body class="activity bp-user my-activity just-me buddypress full-wrap no-js">

    <div id="page">

        {{ include('DocumentaryWIREBundle:Main:header.html.twig') }}

        {{ include('DocumentaryWIREBundle:Main:navigation.html.twig') }}

        {% block main %}
            <div id="main">
                <div class="wrap cf">

                    {% block content %}
                        <div id="content">
                            <div class="post-0 bp_members type-bp_members status-publish hentry" id="post-0">
                                <h1 class="page-title">
                                    <a href="http://localhost/wordpress/members/admin/">{{ user.username }}</a>
                                </h1>

                                <div class="page-content rich-content">
                                    <div id="buddypress">
                                        {{ include('DocumentaryWIREBundle:User:header.html.twig') }}

                                        {{ include('DocumentaryWIREBundle:User:navigation.html.twig') }}

                                        <div id="item-body" role="main">

                                            <div class="item-list-tabs no-ajax" id="subnav" role="navigation">
                                                <ul>
                                                    <li id="public-personal-li"  class="current selected">
                                                        <a id="public" href="http://localhost/wordpress/members/admin/profile/">
                                                            View
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div><!-- .item-list-tabs -->

                                            <div class="profile" role="main">

                                                <div class="bp-widget base">

                                                    <h4>Base</h4>

                                                    <table class="profile-fields">

                                                        <tr class="field_1 field_name">

                                                            <td class="label">Name</td>

                                                            <td class="data">
                                                                <p>
                                                                    <a href="{{ path('documentary_wire_activity_user', {'username': user.username }) }}" rel="nofollow">
                                                                        {{ user.username }}
                                                                    </a>
                                                                </p>
                                                            </td>

                                                        </tr>

                                                    </table>
                                                </div>

                                            </div><!-- .profile -->


                                        </div><!-- #item-body -->
                                    </div><!-- #buddypress -->
                                </div>
                            </div><!--end .hentry-->
                        </div><!-- end #content -->
                    {% endblock %}

                    {% block sidebar %}
                        {{ include('DocumentaryWIREBundle:Main:sidebar.html.twig') }}
                    {% endblock %}

                </div>
            </div><!-- end #main -->
        {% endblock %}

        {{ include('DocumentaryWIREBundle:Main:footer.html.twig') }}

    </div><!-- end #page -->

    </body>
{% endblock %}